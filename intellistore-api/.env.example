# IntelliStore API Configuration Template
# Copy this file to .env and update the values for your environment

# Security (REQUIRED)
JWT_SECRET=your-secret-key-here

# Environment
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8092
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:51090,http://localhost:3000

# Storage Configuration
RAFT_LEADER_ADDR=localhost:8001
STORAGE_NODES=localhost:8001

# ML Service Configuration
ML_INFERENCE_URL=http://localhost:8093

# Optional services (leave empty for development)
