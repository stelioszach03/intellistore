# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "intellistore"
environment  = "dev"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]
private_subnets    = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets     = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS Configuration
kubernetes_version = "1.27"
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]  # Restrict this in production

# Node Group Configuration
node_group_capacity_type  = "ON_DEMAND"
node_group_instance_types = ["m5.large", "m5.xlarge"]
node_group_desired_size   = 3
node_group_max_size       = 10
node_group_min_size       = 1

# DNS Configuration
domain_name           = "intellistore.dev"
create_route53_zone   = false  # Set to true if you want to create a Route53 zone
create_acm_certificate = false  # Set to true if you want to create an ACM certificate